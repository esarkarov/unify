    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "drizzle-kit": "^0.31.8",
    "eslint-plugin-perfectionist": "^5.3.1",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.53.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
